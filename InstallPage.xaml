<ui:FluentWindow x:Class="ZibllWindows.InstallPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="Cài đặt ZibllWindows"
                 Width="600"
                 Height="500"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <ui:SymbolIcon Symbol="Download24" FontSize="48" Foreground="#0078D4" Margin="0,0,0,15" HorizontalAlignment="Center"/>
            <TextBlock Text="Cài đặt ZibllWindows" 
                       FontSize="24" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusText"
                       Text="Đang kiểm tra cập nhật..."
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </StackPanel>
        
        <!-- Progress and Info -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <ui:ProgressRing x:Name="ProgressRing"
                             IsIndeterminate="True"
                             Width="60"
                             Height="60"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"
                             Visibility="Visible"/>
            
            <ProgressBar x:Name="ProgressBar"
                         Value="0"
                         Maximum="100"
                         Height="8"
                         Margin="0,0,0,20"
                         Visibility="Collapsed"/>
            
            <TextBlock x:Name="ProgressText"
                       Text=""
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <Border x:Name="InfoBorder"
                    Background="#F0F0F0"
                    CornerRadius="8"
                    Padding="15"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Thông tin cài đặt:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="InstallInfoText"
                               TextWrapping="Wrap"
                               FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <ui:Button x:Name="InstallButton"
                       Content="Cài đặt"
                       Appearance="Primary"
                       Click="InstallButton_Click"
                       IsEnabled="False"
                       Margin="0,0,10,0"
                       Visibility="Collapsed"/>
            <ui:Button x:Name="SkipButton"
                       Content="Bỏ qua"
                       Click="SkipButton_Click"
                       Visibility="Collapsed"/>
            <ui:Button x:Name="UninstallButton"
                       Content="Gỡ cài đặt"
                       Appearance="Danger"
                       Click="UninstallButton_Click"
                       Visibility="Collapsed"/>
            <ui:Button x:Name="CloseButton"
                       Content="Đóng"
                       Click="CloseButton_Click"
                       Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
