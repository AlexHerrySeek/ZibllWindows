<ui:FluentWindow x:Class="ZibllWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="ZibllWindows | Alex Herry"
        Height="500" Width="1100"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="None">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" 
                     Title="ZibllWindows | Alex Herry"
                     ShowMaximize="True"
                     ShowMinimize="True">
        </ui:TitleBar>

        <!-- NavigationView + Content Side by Side -->
        <Grid Grid.Row="1">
            <!-- NavigationView -->
            <ui:NavigationView x:Name="MainNavigation"
                              PaneDisplayMode="Left"
                              IsBackButtonVisible="Collapsed"
                              IsPaneToggleVisible="True"
                              IsPaneOpen="False"
                              OpenPaneLength="220"
                              CompactPaneLength="60"
                              SelectionChanged="MainNavigation_SelectionChanged"
                              PaneOpened="MainNavigation_PaneOpenedOrClosed"
                              PaneClosed="MainNavigation_PaneOpenedOrClosed">
                <ui:NavigationView.MenuItems>
                    <ui:NavigationViewItem Content="Trang chủ" 
                                          Tag="Home"
                                          Icon="{ui:SymbolIcon Home24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                    <ui:NavigationViewItem Content="Windows" 
                                          Tag="Windows"
                                          Icon="{ui:SymbolIcon Desktop24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                    <ui:NavigationViewItem Content="Office" 
                                          Tag="Office"
                                          Icon="{ui:SymbolIcon Document24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                    <ui:NavigationViewItem Content="Công cụ" 
                                          Tag="Tools"
                                          Icon="{ui:SymbolIcon Wrench24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                    <ui:NavigationViewItem Content="Công cụ Zibll" 
                                          Tag="GhostToolbox"
                                          Icon="{ui:SymbolIcon Apps24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                </ui:NavigationView.MenuItems>
                
                <ui:NavigationView.FooterMenuItems>
                    <ui:NavigationViewItem Content="Thông tin" 
                                          Tag="SystemInfo"
                                          Icon="{ui:SymbolIcon Info24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                    <ui:NavigationViewItem Content="Cài đặt" 
                                          Tag="Settings"
                                          Icon="{ui:SymbolIcon Settings24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                    <ui:NavigationViewItem Content="Trợ giúp" 
                                          Tag="Help"
                                          Icon="{ui:SymbolIcon QuestionCircle24}"
                                          PreviewMouseLeftButtonDown="NavItem_Click"/>
                </ui:NavigationView.FooterMenuItems>
            </ui:NavigationView>
            
            <!-- Content Area with Margin to avoid NavigationView -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="60,0,0,0">
                <Grid x:Name="MainContentGrid" Margin="30">
                    <StackPanel x:Name="HomePage" Visibility="Visible">
                        <TextBlock Text="Chào mừng đến với ZibllWindows" 
                                   FontSize="36" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Công cụ kích hoạt Windows và Office mạnh mẽ, dễ dàng, nhanh chóng và miễn phí, và công cụ có sẵn dành cho bạn." 
                                   FontSize="15" 
                                   Opacity="0.7"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,30"/>
                        
                        <ui:ProgressRing x:Name="LoadingProgress"
                                         IsIndeterminate="True"
                                         Visibility="Collapsed"
                                         Width="50" 
                                         Height="50"
                                         Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Windows Quick Access -->
                            <ui:Card Grid.Column="0" Padding="25">
                                <StackPanel>
                                    <ui:SymbolIcon Symbol="Desktop24" FontSize="52" Margin="0,0,0,18"/>
                                    <TextBlock Text="Kích hoạt Windows" 
                                               FontSize="22" 
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Hỗ trợ Windows 10/11 với phương pháp HWID vĩnh viễn, KMS38 (2038) và Online KMS (180 ngày)" 
                                               TextWrapping="Wrap"
                                               Opacity="0.7"
                                               FontSize="13"
                                               LineHeight="20"
                                               Margin="0,0,0,18"/>
                                    <ui:Button Content="Bắt đầu kích hoạt"
                                               Appearance="Primary"
                                               Icon="{ui:SymbolIcon Play24}"
                                               HorizontalAlignment="Stretch"
                                               Padding="12,10"
                                               Click="NavigateToWindows_Click"/>
                                </StackPanel>
                            </ui:Card>

                            <!-- Office Quick Access -->
                            <ui:Card Grid.Column="2" Padding="25">
                                <StackPanel>
                                    <ui:SymbolIcon Symbol="Document24" FontSize="52" Margin="0,0,0,18" Foreground="#D95319"/>
                                    <TextBlock Text="Kích hoạt Office" 
                                               FontSize="22" 
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="Hỗ trợ Office 2016/2019/2021/365 với Ohook (vĩnh viễn) và Online KMS (180 ngày)" 
                                               TextWrapping="Wrap"
                                               Opacity="0.7"
                                               FontSize="13"
                                               LineHeight="20"
                                               Margin="0,0,0,18"/>
                                    <ui:Button Content="Bắt đầu kích hoạt"
                                               Appearance="Primary"
                                               Icon="{ui:SymbolIcon Play24}"
                                               HorizontalAlignment="Stretch"
                                               Padding="12,10"
                                               Click="NavigateToOffice_Click"/>
                                </StackPanel>
                            </ui:Card>
                        </Grid>

                        <!-- Feature Highlights -->
                        <TextBlock Text="Đặc điểm nổi bật" 
                                   FontSize="22" 
                                   FontWeight="SemiBold"
                                   Margin="0,35,0,18"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Card Grid.Column="0" Padding="18">
                                <StackPanel>
                                    <ui:SymbolIcon Symbol="Checkmark24" FontSize="32" Foreground="#10B981" Margin="0,0,0,12"/>
                                    <TextBlock Text="An toàn &amp; Bảo mật" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBlock Text="Sử dụng ZibllSecurity chính thống, không chứa malware" 
                                               TextWrapping="Wrap" 
                                               Opacity="0.7" 
                                               FontSize="12"/>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="2" Padding="18">
                                <StackPanel>
                                    <ui:SymbolIcon Symbol="Flash24" FontSize="32" Foreground="#F59E0B" Margin="0,0,0,12"/>
                                    <TextBlock Text="Nhanh chóng" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBlock Text="Kích hoạt chỉ mất vài giây với giao diện tối ưu" 
                                               TextWrapping="Wrap" 
                                               Opacity="0.7" 
                                               FontSize="12"/>
                                </StackPanel>
                            </ui:Card>
                            
                            <ui:Card Grid.Column="4" Padding="18">
                                <StackPanel>
                                    <ui:SymbolIcon Symbol="Star24" FontSize="32" Foreground="#3B82F6" Margin="0,0,0,12"/>
                                    <TextBlock Text="Miễn phí" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBlock Text="Hoàn toàn miễn phí, không quảng cáo, mã nguồn mở" 
                                               TextWrapping="Wrap" 
                                               Opacity="0.7" 
                                               FontSize="12"/>
                                </StackPanel>
                            </ui:Card>
                        </Grid>

                        <!-- Quick Tools -->
                        <TextBlock Text="Công cụ nhanh" 
                                   FontSize="22" 
                                   FontWeight="SemiBold"
                                   Margin="0,35,0,18"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button Grid.Column="0"
                                       Content="Kiểm tra trạng thái"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Info24}"
                                       Click="BtnCheckActivation_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,10"/>
                            
                            <ui:Button Grid.Column="2"
                                       Content="Gỡ bỏ kích hoạt"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Delete24}"
                                       Click="BtnRemoveActivation_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,10"/>
                            
                            <ui:Button Grid.Column="4"
                                       Content="Quản lý Tác vụ"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Apps24}"
                                       Click="BtnTaskManager_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,10"/>
                        </Grid>
                        
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button Grid.Column="0"
                                       Content="Dòng lệnh CMD"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Window24}"
                                       Click="BtnCMD_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,10"/>
                            
                            <ui:Button Grid.Column="2"
                                       Content="PowerShell"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Code24}"
                                       Click="BtnPowerShell_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,10"/>
                            
                            <ui:Button Grid.Column="4"
                                       Content="Bảng điều khiển"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Settings24}"
                                       Click="BtnControlPanel_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,10"/>
                        </Grid>
                    </StackPanel>

                    <!-- Windows Page -->
                    <StackPanel x:Name="WindowsPage" Visibility="Collapsed">
                        <TextBlock Text="Kích hoạt Windows" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Chọn phương pháp kích hoạt phù hợp với hệ thống của bạn" 
                                   FontSize="16" 
                                   Opacity="0.6"
                                   Margin="0,0,0,25"/>

                        <ui:CardExpander Margin="0,0,0,15" IsExpanded="True">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Symbol="Desktop24" FontSize="28" Margin="0,0,15,0"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Kích hoạt Windows" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Nhiều phương pháp kích hoạt khác nhau" 
                                           FontSize="12" 
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="Chọn phương pháp kích hoạt" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button x:Name="BtnActivateWindowsHWID"
                                       Grid.Column="0"
                                       Content=" HWID (Vĩnh viễn)"
                                       Appearance="Primary"
                                       Icon="{ui:SymbolIcon CheckmarkCircle24}"
                                       Click="BtnActivateWindowsHWID_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="15,12"
                                       FontSize="14"
                                       ToolTip=" Khuyên dùng: Kích hoạt vĩnh viễn cho Windows 10/11 Home/Pro"/>
                            
                            <ui:Button x:Name="BtnActivateWindowsKMS38"
                                       Grid.Column="2"
                                       Content="⏰ KMS38 (→ 2038)"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Clock24}"
                                       Click="BtnActivateWindowsKMS38_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="15,12"
                                       FontSize="14"
                                       ToolTip=" Dành cho: Windows Server, LTSC, Enterprise"/>
                        </Grid>
                        
                        <ui:Button x:Name="BtnActivateWindowsOnlineKMS"
                                   Content=" Online KMS (180 ngày)"
                                   Appearance="Secondary"
                                   Icon="{ui:SymbolIcon Globe24}"
                                   Click="BtnActivateWindowsOnlineKMS_Click"
                                   HorizontalAlignment="Stretch"
                                   Padding="15,12"
                                   FontSize="14"
                                   Margin="0,0,0,15"
                                   ToolTip=" Cần gia hạn sau 180 ngày - phù hợp khi HWID không khả dụng"/>
                        
                        <Border Background="#10000000" 
                                CornerRadius="6" 
                                Padding="12,10" 
                                BorderBrush="#20000000" 
                                BorderThickness="1"
                                Margin="0,5,0,0">
                            <TextBlock TextWrapping="Wrap" FontSize="12" Opacity="0.75" LineHeight="20">
                                <Run Text=" HWID:" FontWeight="SemiBold"/> <Run Text="Khuyên dùng nhất - kích hoạt vĩnh viễn cho Win 10/11"/>
                                <LineBreak/>
                                <Run Text=" KMS38:" FontWeight="SemiBold"/> <Run Text="Dùng cho Server, LTSC, Enterprise - đến năm 2038"/>
                                <LineBreak/>
                                <Run Text=" Online KMS:" FontWeight="SemiBold"/> <Run Text="Phương án dự phòng - gia hạn 6 tháng/lần"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                        </ui:CardExpander>
                    </StackPanel>

                    <!-- Office Page -->
                    <StackPanel x:Name="OfficePage" Visibility="Collapsed">
                        <TextBlock Text="Kích hoạt Office" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Chọn phương pháp kích hoạt phù hợp cho phiên bản Office của bạn" 
                                   FontSize="16" 
                                   Opacity="0.6"
                                   Margin="0,0,0,25"/>

                        <ui:CardExpander Margin="0,0,0,15" IsExpanded="True">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Symbol="Document24" FontSize="28" Margin="0,0,15,0" Foreground="#D95319"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Kích hoạt Office" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Phương pháp Ohook và KMS" 
                                           FontSize="12" 
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="Chọn phương pháp kích hoạt" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button x:Name="BtnActivateOfficeOhook"
                                       Grid.Column="0"
                                       Content=" Ohook (Vĩnh viễn)"
                                       Appearance="Primary"
                                       Icon="{ui:SymbolIcon CheckmarkCircle24}"
                                       Click="BtnActivateOfficeOhook_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="15,12"
                                       FontSize="14"
                                       ToolTip=" Khuyên dùng: Kích hoạt vĩnh viễn Office 2016/2019/2021/365"/>
                            
                            <ui:Button x:Name="BtnActivateOfficeKMS"
                                       Grid.Column="2"
                                       Content=" Online KMS (180 ngày)"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Globe24}"
                                       Click="BtnActivateOfficeKMS_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="15,12"
                                       FontSize="14"
                                       ToolTip=" Cần gia hạn sau 180 ngày"/>
                        </Grid>
                        
                        <Border Background="#10000000" 
                                CornerRadius="6" 
                                Padding="12,10" 
                                BorderBrush="#20000000" 
                                BorderThickness="1"
                                Margin="0,5,0,0">
                            <TextBlock TextWrapping="Wrap" FontSize="12" Opacity="0.75" LineHeight="20">
                                <Run Text=" Ohook:" FontWeight="SemiBold"/> <Run Text="Khuyên dùng - kích hoạt vĩnh viễn Office 2016/2019/2021/365"/>
                                <LineBreak/>
                                <Run Text=" Online KMS:" FontWeight="SemiBold"/> <Run Text="Phương án dự phòng - gia hạn 6 tháng/lần"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                        </ui:CardExpander>
                    </StackPanel>

                    <!-- Tools Page -->
                    <StackPanel x:Name="ToolsPage" Visibility="Collapsed">
                        <TextBlock Text="Công cụ bổ sung" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Quản lý và kiểm tra trạng thái kích hoạt" 
                                   FontSize="16" 
                                   Opacity="0.6"
                                   Margin="0,0,0,25"/>

                        <ui:CardExpander Margin="0,0,0,15" IsExpanded="True">
                    <ui:CardExpander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Symbol="Wrench24" FontSize="28" Margin="0,0,15,0" Foreground="#5CB85C"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Công cụ bổ sung" FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Kiểm tra, gỡ bỏ, và quản lý kích hoạt" 
                                           FontSize="12" 
                                           Opacity="0.7"/>
                            </StackPanel>
                        </Grid>
                    </ui:CardExpander.Header>
                    <StackPanel Margin="0,10,0,0">
                        <!-- Check Status -->
                        <TextBlock Text="Kiểm tra và quản lý" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button x:Name="BtnCheckActivation"
                                       Grid.Column="0"
                                       Content=" Kiểm tra trạng thái"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Info24}"
                                       Click="BtnCheckActivation_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="15,12"
                                       FontSize="14"
                                       ToolTip="Xem trạng thái kích hoạt Windows và Office"/>
                            
                            <ui:Button x:Name="BtnRemoveActivation"
                                       Grid.Column="2"
                                       Content=" Gỡ bỏ kích hoạt"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Delete24}"
                                       Click="BtnRemoveActivation_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="15,12"
                                       FontSize="14"
                                       ToolTip="Gỡ bỏ tất cả kích hoạt KMS/Ohook"/>
                        </Grid>
                        
                        <!-- Product Key Management -->
                        <TextBlock Text="Quản lý Product Key" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button x:Name="BtnInstallKey"
                                       Grid.Column="0"
                                       Content=" Cài đặt Key"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Key24}"
                                       Click="BtnInstallKey_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="15,12"
                                       FontSize="14"
                                       ToolTip="Cài đặt Product Key cho Windows/Office"/>
                            
                            <ui:Button x:Name="BtnChangeEdition"
                                       Grid.Column="2"
                                       Content="Đổi phiên bản"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon ArrowSwap24}"
                                       Click="BtnChangeEdition_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,8"
                                       ToolTip="Chuyển đổi phiên bản Windows"/>
                        </Grid>
                        
                        <!-- Office Tools -->
                        <TextBlock Text="Công cụ Office:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button x:Name="BtnConvertOffice"
                                       Grid.Column="0"
                                       Content="C2R-Retail → Volume"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon ArrowSync24}"
                                       Click="BtnConvertOffice_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,8"
                                       ToolTip="Chuyển Office từ Retail sang Volume"/>
                            
                            <ui:Button x:Name="BtnOfficeToolPlus"
                                       Grid.Column="2"
                                       Content="Công cụ Office Plus"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Settings24}"
                                       Click="BtnOfficeToolPlus_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,8"
                                       ToolTip="Mở Office Tool Plus để quản lý nâng cao"/>
                        </Grid>
                        
                        <!-- Advanced Tools -->
                        <TextBlock Text="Công cụ nâng cao:" FontWeight="SemiBold" Margin="0,15,0,10"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button x:Name="BtnExtractOEM"
                                       Grid.Column="0"
                                       Content="Trích xuất $OEM$"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Folder24}"
                                       Click="BtnExtractOEM_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,8"
                                       ToolTip="Tạo OEM folder để cài Windows tự động kích hoạt"/>
                            
                            <ui:Button x:Name="BtnTroubleshoot"
                                       Grid.Column="2"
                                       Content="Khắc phục sự cố"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Shield24}"
                                       Click="BtnTroubleshoot_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,8"
                                       ToolTip="Tự động sửa các lỗi activation"/>
                        </Grid>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:Button x:Name="BtnResetLicensing"
                                       Grid.Column="0"
                                       Content="Khởi tạo lại giấy phép"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon ArrowReset24}"
                                       Click="BtnResetLicensing_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,8"
                                       ToolTip="Khôi phục hệ thống licensing về mặc định"/>
                            
                            <ui:Button x:Name="BtnAdvancedKMS"
                                       Grid.Column="2"
                                       Content="Cài đặt KMS"
                                       Appearance="Secondary"
                                       Icon="{ui:SymbolIcon Server24}"
                                       Click="BtnAdvancedKMS_Click"
                                       HorizontalAlignment="Stretch"
                                       Padding="12,8"
                                       ToolTip="Tùy chỉnh KMS server, port và auto-renewal"/>
                        </Grid>
                        
                        <!-- System Tools -->
